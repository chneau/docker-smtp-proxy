{
	"name": "docker-smtp-proxy",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"start": "bun index.ts",
		"dev": "bun --watch index.ts",
		"build": "bun build index.ts --target=bun --outdir=dist",
		"upgrade": "bun update --latest",
		"lint": "tsc --noEmit",
		"check": "deno fmt --use-tabs --quiet; oxlint --fix-dangerously --quiet; timeout 3s biome check --write --unsafe .",
		"publish": "docker build --pull --push --tag ghcr.io/chneau/smtp-proxy .",
		"all": "bun run upgrade; bun run check; bun run lint"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-validator": "^0.7.0",
		"@scalar/hono-api-reference": "^0.9.9",
		"hono": "^4.8.4",
		"hono-openapi": "^0.4.8",
		"nodemailer": "^7.0.5",
		"zod": "^4.0.2",
		"zod-openapi": "^5.1.0"
	},
	"devDependencies": {
		"@types/bun": "^1.2.18",
		"@types/nodemailer": "^6.4.17",
		"typescript": "^5.8.3"
	}
}
